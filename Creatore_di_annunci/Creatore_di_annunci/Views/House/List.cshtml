@{
}

@model List<Creatore_di_annunci.Models.Entities.House>

<h1>TABELLA CASE</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>PIANI</th>
            <th>BAGNI</th>
            <th>MQUADRI</th>
            <th>ASCENSORE</th>
            <th>GIARDINO</th>
            <th>PISCINA</th>
            <th>TERRAZZO</th>
            <th>PREZZO</th>
        </tr>
    </thead>
    <tbody>
        @foreach( var house in Model){
            <tr>
                <td>@house.Id</td>
                <td>@house.Piani</td>
                <td>@house.Bagni</td>
                <td>@house.MQuadri</td>
                <td>@house.ascensore</td>
                <td>@house.giardino</td>
                <td>@house.piscina</td>
                <td>@house.terrazza</td>
                <td>@house.prezzo</td>

            </tr>
        }
    </tbody>
</table>
